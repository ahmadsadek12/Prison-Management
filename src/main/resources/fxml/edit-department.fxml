<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.EditDepartmentController"
      alignment="CENTER" styleClass="form-container" prefWidth="400" prefHeight="300">
    <Label text="Edit Department" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Department Name"/>
        <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Select Status"/>
        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Description" prefRowCount="3"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save Changes" onAction="#handleSave" styleClass="primary-button"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox> 