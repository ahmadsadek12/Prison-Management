<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.RoomController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="blockNameLabel" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Add Room" onAction="#handleAddRoom"/>
    </HBox>

    <!-- Search Bar -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search rooms..." HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#handleSearch"/>
    </HBox>

    <!-- Rooms Table -->
    <TableView fx:id="roomsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="roomIdCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="roomTypeCol" text="Type" prefWidth="100"/>
            <TableColumn fx:id="roomDescriptionCol" text="Description" prefWidth="200"/>
            <TableColumn fx:id="departmentCol" text="Department" prefWidth="150"/>
            <TableColumn fx:id="expensesCol" text="Expenses" prefWidth="100"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <stylesheets>
        <URL value="@/styles/rooms.css"/>
    </stylesheets>
</VBox> 