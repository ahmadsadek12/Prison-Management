<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.StaffController"
      spacing="10"
      styleClass="form-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label text="Add New Staff Member" styleClass="form-title"/>
    <Separator/>

    <!-- Form Fields -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="150"/>
            <ColumnConstraints minWidth="200" prefWidth="250"/>
        </columnConstraints>

        <!-- Name -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Gender -->
        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="genderComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Male"/>
                    <String fx:value="Female"/>
                    <String fx:value="Other"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Date of Birth -->
        <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dobPicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Role -->
        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Department -->
        <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="departmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- Salary -->
        <Label text="Salary:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <!-- Block Assignment -->
        <Label text="Block:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <ComboBox fx:id="blockComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancelAddStaff" styleClass="secondary-button"/>
        <Button text="Save" onAction="#handleSaveStaff" styleClass="primary-button"/>
    </HBox>

    <stylesheets>
        <URL value="@../styles/dashboard.css"/>
    </stylesheets>
</VBox> 