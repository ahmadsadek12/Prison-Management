<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.time.LocalDate?>
<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.EditExpenseController"
      alignment="CENTER" styleClass="form-container" prefWidth="400" prefHeight="250">
    <Label text="Edit Expense" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Amount:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Amount"/>
        <Label text="Due Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save Changes" onAction="#handleSave" styleClass="primary-button"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox> 