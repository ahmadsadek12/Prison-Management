<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="org.example.controllers.RoomViewController"
      styleClass="form-container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Room Details" styleClass="form-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Edit Room" onAction="#handleEdit" styleClass="secondary-button"/>
    </HBox>
    <Separator/>

    <!-- Room Information -->
    <GridPane hgap="10" vgap="10" styleClass="info-grid">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="150"/>
            <ColumnConstraints minWidth="200" prefWidth="300" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Room ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="field-label"/>
        <Label fx:id="roomIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="value-label"/>

        <Label text="Room Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="field-label"/>
        <Label fx:id="roomTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="value-label"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="field-label"/>
        <Label fx:id="roomDescriptionLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="value-label" wrapText="true"/>

        <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="field-label"/>
        <Label fx:id="departmentLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="value-label"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="field-label"/>
        <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="value-label"/>

        <Label text="Last Inspection:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="field-label"/>
        <Label fx:id="lastInspectionLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="value-label"/>
    </GridPane>

    <!-- Equipment Section -->
    <TitledPane text="Equipment" expanded="true">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="equipmentSearchField" promptText="Search equipment..." HBox.hgrow="ALWAYS"/>
                <Button text="Add Equipment" onAction="#handleAddEquipment" styleClass="primary-button"/>
            </HBox>

            <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="equipmentIdCol" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="equipmentNameCol" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="equipmentTypeCol" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="equipmentActionsCol" text="Actions" prefWidth="180"/>
                </columns>
                <placeholder>
                    <Label text="No equipment found"/>
                </placeholder>
            </TableView>
        </VBox>
    </TitledPane>

    <!-- Maintenance History -->
    <TitledPane text="Maintenance History" expanded="false">
        <VBox spacing="10">
            <TableView fx:id="maintenanceTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="maintenanceDateCol" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="maintenanceTypeCol" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="maintenanceDescCol" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="maintenanceCostCol" text="Cost" prefWidth="100"/>
                    <TableColumn fx:id="maintenanceStatusCol" text="Status" prefWidth="100"/>
                </columns>
                <placeholder>
                    <Label text="No maintenance records found"/>
                </placeholder>
            </TableView>
        </VBox>
    </TitledPane>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="button-container">
        <Button text="Schedule Maintenance" onAction="#handleScheduleMaintenance" styleClass="secondary-button"/>
        <Button text="Export Report" onAction="#handleExportReport" styleClass="secondary-button"/>
        <Button text="Back" onAction="#handleBack" styleClass="primary-button"/>
    </HBox>

    <stylesheets>
        <URL value="@../styles/dashboard.css"/>
    </stylesheets>
</VBox> 