<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.CrimeFormController"
      styleClass="form-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Crime Information" styleClass="form-title"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    <Separator/>

    <!-- Main Form -->
    <VBox spacing="15">
        <!-- Basic Information -->
        <TitledPane text="Basic Information" expanded="true">
            <GridPane hgap="15" vgap="15" styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="200"/>
                    <ColumnConstraints minWidth="200" prefWidth="300" hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Crime Name:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" promptText="Enter crime name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="nameErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Crime Type:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="typeComboBox" promptText="Select crime type" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="typeErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Severity Level:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ComboBox fx:id="severityComboBox" promptText="Select severity level" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="severityErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Date Committed:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label fx:id="dateErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Location:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="locationField" promptText="Enter crime location" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <Label fx:id="locationErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
            </GridPane>
        </TitledPane>

        <!-- Description and Details -->
        <TitledPane text="Description and Details" expanded="true">
            <VBox spacing="15">
                <Label text="Description:" styleClass="field-label"/>
                <TextArea fx:id="descriptionArea" promptText="Enter crime description" wrapText="true" VBox.vgrow="ALWAYS"/>
                <Label fx:id="descriptionErrorLabel" styleClass="error-label" visible="false"/>

                <Label text="Additional Details:" styleClass="field-label"/>
                <TextArea fx:id="detailsArea" promptText="Enter any additional details" wrapText="true" VBox.vgrow="ALWAYS"/>
                <Label fx:id="detailsErrorLabel" styleClass="error-label" visible="false"/>
            </VBox>
        </TitledPane>

        <!-- Related Information -->
        <TitledPane text="Related Information" expanded="true">
            <GridPane hgap="15" vgap="15" styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="200"/>
                    <ColumnConstraints minWidth="200" prefWidth="300" hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Investigating Officer:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="officerComboBox" promptText="Select investigating officer" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="officerErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Case Status:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="statusComboBox" promptText="Select case status" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="statusErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Case Number:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="caseNumberField" promptText="Enter case number" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="caseNumberErrorLabel" styleClass="error-label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>
        </TitledPane>
    </VBox>

    <!-- Bottom Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="button-container">
        <Button text="Clear Form" onAction="#handleClear" styleClass="secondary-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Save" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>

    <stylesheets>
        <URL value="@../styles/dashboard.css"/>
    </stylesheets>
</VBox> 