<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AddCellController"
      spacing="15"
      styleClass="form-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label fx:id="titleLabel" text="Add New Cell" styleClass="form-title"/>

    <!-- Cell Type Input -->
    <VBox spacing="5">
        <Label text="Cell Type:"/>
        <TextField fx:id="cellTypeField" promptText="Enter cell type"/>
    </VBox>

    <!-- Capacity Input -->
    <VBox spacing="5">
        <Label text="Capacity:"/>
        <Spinner fx:id="capacitySpinner" min="1" max="100" initialValue="1" editable="true"/>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancelAddCell"/>
        <Button text="Save" onAction="#handleSaveCell"/>
    </HBox>

    <stylesheets>
        <String fx:value="/styles/dashboard.css"/>
    </stylesheets>
</VBox>
